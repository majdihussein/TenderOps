@model TenderOps_Web.Models.Dto.PartnerCreateDTO

@{
    ViewData["Title"] = "Create Partner";
}

<div class="container mt-4">
    <h2 class="text-success mb-4">Add New Partner</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <form asp-action="CreatePartner" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Website" class="form-label"></label>
            <input asp-for="Website" class="form-control" placeholder="https://example.com" />
        </div>

        <div class="d-flex gap-3 mt-4">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle me-1"></i> Create
            </button>
            <a asp-action="IndexPartner" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
