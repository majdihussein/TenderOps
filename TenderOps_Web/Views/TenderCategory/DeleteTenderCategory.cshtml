@model TenderOps_Web.Models.Dto.TenderCategoryDTO

@{
    ViewData["Title"] = "Delete Tender Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0 text-center">Delete Tender Category</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-center text-muted mb-4">Are you sure you want to delete this category?</h5>

                    <dl class="row">
                        <dt class="col-sm-4">Category ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Category Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                    </dl>

                    <form asp-action="DeleteTenderCategory" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="IndexTenderCategory" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
