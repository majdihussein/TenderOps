@model IEnumerable<TenderOps_Web.Models.Dto.TenderCategoryDTO>

@{
    ViewData["Title"] = "Tender Categories";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Tender Categories</h2>
        <a asp-action="CreateTenderCategory" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Add New Category
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 60px;">#</th>
                        <th>Category Name</th>
                        <th style="width: 220px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td class="text-start">@category.Name</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="UpdateTenderCategory" asp-route-id="@category.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <form asp-action="DeleteTenderCategory" asp-route-id="@category.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No tender categories found.
        </div>
    }
</div>
