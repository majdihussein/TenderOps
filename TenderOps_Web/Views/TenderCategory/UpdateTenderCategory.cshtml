@model TenderOps_Web.Models.Dto.TenderCategoryUpdateDTO

@{
    ViewData["Title"] = "Update Tender Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-dark py-3">
                    <h4 class="mb-0 text-center">Update Tender Category</h4>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateTenderCategory" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Edit category name..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="IndexTenderCategory" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save2 me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
